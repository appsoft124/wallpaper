<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <TextView
        android:id="@+id/newstitle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Lowon beds oxygenIndia adds global high 314K virus cases | CBC News."
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/NEWSname"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Guardian"
        android:layout_marginLeft="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/imagetwo" />

</LinearLayout>
    <TextView
        android:id="@+id/newsDescription"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text=" India reported a global record of more than 314,000 new infections Thursday as a grim coronavirus surge in the world's second-most populous country sends more and more sick people into a fragile health care system critically short of hospital beds and oxygen"
         android:textSize="19sp"
        android:layout_marginLeft="10dp"
        />
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/publisheddate"
           android:layout_marginLeft="10dp"
           android:textColor="@color/white"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2021-04-22"/>

   </LinearLayout>
</LinearLayout>